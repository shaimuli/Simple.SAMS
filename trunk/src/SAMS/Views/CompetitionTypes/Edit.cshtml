@using SAMS.Models
@model Simple.SAMS.Contracts.Competitions.CompetitionType
@{
    ViewContext.Controller.ViewBag.GroupTitle = Html.ResourceText("Competitions");
    ViewContext.Controller.ViewBag.MenuItems = new[]
                            {
                                new MenuItem{Text = Html.ResourceText("CompetitionTypes"), Action = "Index", Controller="CompetitionTypes"},
                            };    

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>@Html.Resource("EditCompetitionTypeHeader")</legend>
        @Html.HiddenFor(m => m.Id)
        @Html.Partial("_CompetitionTypeFormFields")
        <input type="submit" value="@Html.ResourceText("Update")"/>
    </fieldset>
    

}    