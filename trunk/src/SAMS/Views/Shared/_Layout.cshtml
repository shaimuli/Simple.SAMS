@using SAMS.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @Html.ResourceText("SAMS") | ITA</title>
    <link rel='icon' href='~/Static/Images/favicon.ico' type='image/x-icon' />
    <link rel='shortcut icon' href='~/Static/Images/favicon.ico' type='image/xicon' />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Static/Css/bootstrap-rtl.min.css" type="text/css" rel="stylesheet" />
    <link href="~/Static/Css/jQueryUi/jquery-ui-1.9.1.custom.min.css" type="text/css" rel="stylesheet" />

    <link href="~/Static/Css/default.css" type="text/css" rel="stylesheet" />
    <link href="~/Static/Css/UpdateResults.css" type="text/css" rel="stylesheet" />
    <link href="~/Static/Css/tournament.css" type="text/css" rel="stylesheet" />
    <link href="~/Static/Css/jquery.bracket.min.css" type="text/css" rel="stylesheet" />

</head>
<body class="rtl">
    <header>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    
                    @*@Html.ActionLink("Simple. SAMS | ITA", "Index", "Home", null, new { @class = "brand" })*@

                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><div class="headerLogo"></div></li>
                            <li><h1>@ViewContext.Controller.ViewBag.GroupTitle</h1></li>
                        </ul>
                        <ul class="nav pull-right">
                            @Html.Partial("_LoginPartial")

                        </ul>
                        <ul class="nav pull-right">
                            @Html.MenuItem(Html.ResourceText("Home"), "Index", "Home", Html.ResourceText("Home"))
                            @Html.MenuItem(Html.ResourceText("Competitions"), "Index", "Competitions", Html.ResourceText("Competitions"))

                            @if (Context.Request.IsAuthenticated && Context.User.IsInRole("admin"))
                            {
                                @Html.MenuItem(Html.ResourceText("Admin"), "Users", "Account", Html.ResourceText("Admin"))
                            }
                        </ul>

                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>

    </header>
    <div class="container content">
        <div class="subheader">
            <div class="container">
                <ul class="nav nav-pills">
                    <li></li>
                    
                    <!--<li>
                        <h1> - </h1>
                    </li>
                    <li>
                        @if (ViewContext.Controller.ViewBag.Title != null)
                        {
                            <h2>@ViewContext.Controller.ViewBag.Title</h2>
                        }
                    </li>-->
                </ul>
            </div>
                
                <div class="row">
                    @if (ViewContext.Controller.ViewBag.MenuItems != null)
                    {
                        <ul class="nav nav-pills">
                            @foreach (MenuItem menuItem in ViewContext.Controller.ViewBag.MenuItems)
                            {
                                @Html.MenuItem(menuItem)
                            }
                        </ul>
                    }
                </div>
            </div>
        <div>
            @RenderBody()
        </div>
    </div>
   <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Simple. SAMS</p>
        </div>
    </footer>

    <script type="text/javascript" src="~/Static/Scripts/jQuery/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/jQuery/jquery-ui-1.9.1.custom.min.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/jquery.tablesorter.min.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/bootstrap/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/Underscrore/underscore.1.3.3.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/jQuery/jquery.overscroll.min.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/Date/date-he-IL.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/JSLangExtensions.string.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/Simple.js"></script>
    
    <script type="text/javascript" src="~/Static/Scripts/Simple.SortableTable.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/Simple.ContinuesEdit.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/CompetitionMatches.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/CompetitionDetails.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/Shell.js"></script>
    
    <script type="text/javascript" src="~/Static/Scripts/Underscrore/underscore.1.4.4.min.js"></script>
    <script type="text/javascript" src="~/Static/Scripts/Tournament.js"></script>
    

    @RenderSection("scripts", required: false)

</body>
</html>
