@model SAMS.Models.LoginModel

@{
    //ViewBag.Title = @Html.ResourceText("LoginPage");
}

<hr class="space"/>
<div class="row-fluid">
    <div class="span3">&nbsp;</div>
    <div class="span6">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Html.Resource("LoginFormTitle")</legend>
            <div class="row-fluid">
                <div class="span4">@Html.LabelFor(m => m.UserName, Html.ResourceText("Username"))</div>
                <div class="span8">@Html.TextBoxFor(m => m.UserName)</div>
            </div>
            <div class="row-fluid">
                <div class="span4"></div>
                <div class="span8">@Html.ValidationMessageFor(m => m.UserName)</div>
            </div>
            <div class="row-fluid">
                <div class="span4">@Html.LabelFor(m => m.Password, Html.ResourceText("Password"))</div>
                <div class="span8">@Html.PasswordFor(m => m.Password)</div>
            </div>
        <div class="row-fluid">
            <div class="span4"></div>
            <div class="span8">@Html.ValidationMessageFor(m => m.Password)</div>
        </div>
        <div class="row-fluid">
            <div class="span8"></div>
            <div class="span4"><input type="submit" class="btn btn-primary stretch" value="@Html.ResourceText("Login")" /></div>
        </div>        
        
    </fieldset>
}
        
    </div>
    <div class="span3"></div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
